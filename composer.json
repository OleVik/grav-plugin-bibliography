{
    "name": "Grav Bibliography-plugin",
    "description": "Reads a Bibliography-file (.json) with academic references and renders it as footnotes at the end of the page. Allows for a variety of styles and languages using CSL.",
	"minimum-stability": "dev",
	"prefer-stable": true,
    "require": {
        "seboettg/citeproc-php": "^2.1",
        "citation-style-language/locales": "1.0.0",
        "citation-style-language/styles-distribution": "1.0.0",
		"league/html-to-markdown": "^4.6"
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "citation-style-language/locales",
                "version": "1.0.0",
                "dist": {
                    "url": "https://raw.githubusercontent.com/citation-style-language/locales/master/locales-en-US.xml",
                    "type": "file"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "citation-style-language/styles-distribution",
                "version": "1.0.0",
                "dist": {
                    "url": "https://raw.githubusercontent.com/citation-style-language/styles-distribution/master/apa-5th-edition.csl",
                    "type": "file"
                }
            }
        }
    ]
}
